<div class="col-sm-6 col-md-4">
    <div class="thumbnail fixed-div">
        <h3 class="text-center">{{ product.name }}</h3>
        <img class="img-thumbnail center-block fixed-image" src="{{ vich_uploader_asset(product, "imageFile") }}"
             alt="{{ product.name }}">
        <div class="caption">
            <div class="text-center">
                {{ product.averageRating|starsRating|raw }}
                <h5 class="label-info">Selled by: {{ product.seller.fullname }}</h5>
            </div>
            <hr>
            <p><strong>Category</strong><a
                        href="{{ path('show_products_by_category', {'slug': product.category.slug}) }}">
                    {{ product.category.name }}
                </a></p>
            <p><strong>Quantity available: {{ product.quantity }}</strong></p>
            <div class="h3">
                <span class="label label-info">â‚¬{{ product.price|number_format(2) }}</span>
            </div>
            <hr>
            <p class="text">
            <form method="post" style="display: inline-block">
                <a href="{{ path("cart_add", {"slug": product.slug}) }}" class="btn btn-primary"
                   role="button"><i class="fa fa-cart-plus" aria-hidden="true"> Add to Cart</i></a>
            </form>
            <a href="{{ path("product_show", {"slug": product.slug}) }}" class="btn btn-default"
               role="button"><i class="fa fa-info" aria-hidden="true"> Details</i>
            </a>
        </div>
    </div>
</div>
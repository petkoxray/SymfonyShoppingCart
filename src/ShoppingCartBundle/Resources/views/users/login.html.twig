{% extends "@ShoppingCart/base.html.twig" %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {{ form_start(login_form) }}

    {{ form_row(login_form._username) }}
    {{ form_row(login_form._password) }}

    <button type="submit" class="btn btn-primary" formnovalidate>Login</button>

{% endblock %}
{% extends "@ShoppingCart/base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><i class="fa fa-shopping-cart"></i> Shopping Cart</h5>
                            </div>
                            <div class="col-xs-6">
                                <a href="{{ path('products_all') }}" type="button"
                                   class="btn btn-primary btn-sm btn-block">
                                    Continue shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {% for product in cart %}
                        <div class="row">
                            <div class="col-xs-2"><img src="{{ vich_uploader_asset(product, "imageFile") }}"
                                                       class="admin-image"
                                                       alt="Product Image">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong>{{ product.name }}</strong></h4>
                                <h4>
                                    {% if product.isInStock %}
                                        <small class="instock">In Stock / {{ product.quantity }}</small>
                                    {% else %}
                                        <small class="out-of-stock">Out Of Stock</small>
                                    {% endif %}
                                </h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h5><strong>€{{ product.price|number_format(2) }} </strong></h5>
                                </div>
                                <form method="post" action="{{ path("cart_remove", {"slug": product.slug}) }}">
                                    <button class="btn btn-danger"
                                            role="button"><i class="fa fa-cart-plus" aria-hidden="true"> Remove</i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <hr>
                    {% endfor %}
                    {#<div class="text-center">#}
                    {#<div class="col-xs-9">#}
                    {#<h6 class="text-right">Added items?</h6>#}
                    {#</div>#}
                    {#<div class="col-xs-3">#}
                    {#<button type="button" class="btn btn-default btn-sm btn-block">#}
                    {#Update cart#}
                    {#</button>#}
                    {#</div>#}
                    {#</div>#}
                </div>
            </div>
            <div class="panel-footer">
                <div class="row text-center">
                    <div class="col-xs-9">
                        <h4 class="text-right">Total <strong>€{{ cartTotal|number_format(2) }}</strong></h4>
                    </div>
                    <div class="col-xs-3">
                        <form method="post" action="{{ path('cart_checkout') }}">
                            <button type="submit" class="btn btn-success btn-block">
                                Checkout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
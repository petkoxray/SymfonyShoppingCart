<div class="col-sm-6 col-md-4">
    <div class="thumbnail {{ product.hasActivePromotion ?  "promo" : '' }}">
        <h3 class="text-center">{{ product.name }}</h3>
        <img class="img-responsive center-block" src="{{ vich_uploader_asset(product, "imageFile") }}"
             alt="{{ product.name }}">
        <div class="caption">
            <div class="text-center">
                {{ product.averageRating|starsRating|raw }}
            </div>
            <hr>
            <p><strong>Quantity available: {{ product.quantity }}</strong></p>
            <div class="h3">
                {% if product.hasActivePromotion %}
                    <span class="label label-success"><s>€{{ product.originalPrice|number_format(2) }}</s></span>
                    <span class="label label-info">€{{ product.price|number_format(2) }}</span>
                {% else %}
                    <span class="label label-success">€{{ product.originalPrice|number_format(2) }}</span>
                {% endif %}
            </div>
            <hr>
            <p class="text">
            <form method="post" style="display: inline-block">
                <a href="{{ path("cart_add", {"slug": product.slug}) }}" class="btn btn-primary"
                   role="button"><i class="fa fa-cart-plus" aria-hidden="true"> Add to Cart</i></a>
            </form>
            <a href="{{ path("product_show", {"slug": product.slug}) }}" class="btn btn-default"
               role="button"><i class="fa fa-info" aria-hidden="true"> Details</i>
            </a>
        </div>
    </div>
</div>
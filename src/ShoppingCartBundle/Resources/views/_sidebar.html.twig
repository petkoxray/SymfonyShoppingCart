<ul class="list-group">
    <li class="list-group-item active">Categories</li>
    {% if categories|length > 0 %}
        {% for cat in categories %}
            <li class="list-group-item">
                <a href="{{ cat.slug }}">{{ cat.name }}</a>
            </li>
        {% endfor %}
    {% else %}
        <li class="text-muted">No categories</li>
    {% endif %}
</ul>
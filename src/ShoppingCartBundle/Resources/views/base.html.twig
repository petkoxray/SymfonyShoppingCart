<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}SoftUni Shopping Cart{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/cart.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}"/>
</head>
<body>
<div class="container">
    {% include "@ShoppingCart/_navbar.html.twig" %}
    {% include "@ShoppingCart/_messages.html.twig" %}
    <div class="row">
        <aside class="col-md-3">
            {{ render(controller("ShoppingCartBundle:Category:sidebarCategories")) }}
        </aside>
        <main class="col-md-9">
            {% block body %}{% endblock %}
        </main>
    </div>
    {% block footer %}
        <footer>
            {% include "ShoppingCartBundle::_footer.html.twig" %}
        </footer>
    {% endblock %}
</div>
{% block javascripts %}
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    {#<script src="{{ asset('js/snowstorm-min.js') }}"></script>#}
{% endblock %}
</body>
</html>

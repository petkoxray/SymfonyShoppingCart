<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="{{ vich_uploader_asset(product, "imageFile") }}" alt="{{ product.name }}">
        <div class="rating">
            <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
        </div>
        <div class="caption">
            <h3>{{ product.name }}</h3>
            <p><strong>Quantity available: {{ product.quantity }}</strong></p>
            <p>{{ product.description }}</p>
            <div class="h3">
                <span class="label label-success">€{{ product.price|number_format(2) }}</span>
            </div>
            <hr>
            <p class="text">
            <form method="post" action="#"
                  style="display: inline-block">
                <button class="btn btn-primary" type="submit"><span
                            class="fa fa-cart-plus"></span> Add to Cart
                </button>
            </form>
            <a href="#" class="btn btn-default"
               role="button"><i class="fa fa-info" aria-hidden="true"> Details</i>
            </a>
            </p>
        </div>
    </div>
</div>